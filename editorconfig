#################
# Common Settings
#################

# This file is the top-most EditorConfig file
root = true

# All Files
[*]
charset = utf-8
indent_style = space
indent_size = 2
insert_final_newline = true
trim_trailing_whitespace = true

# Markdown Files
[*.md]
trim_trailing_whitespace = false

# Python uses four spaces
[*.py]
indent_size = 4

[{GNUmakefile,GNUmakefile.*,Makefile,Makefile.*,*.mk,}]
indent_style = tab
indent_size = 4
